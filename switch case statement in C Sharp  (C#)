using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace hello
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Enter your choise.\n1.Press 1 for 1\n2.Press 2 for 2\n3.Press 3 for 3.");
            int choise;
            choise = int.Parse(Console.ReadLine());
            switch (choise)
            {
                case 1:
                    Console.WriteLine("1");
                    break;
                    case 2:
                    Console.WriteLine("2");
                    break;
                    case 3:
                    Console.WriteLine("3");
                    break;
                    default: 
                    Console.WriteLine("error");
                    break;
            }

            Console.ReadKey();
        }
    }
}
