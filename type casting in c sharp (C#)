using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace hello
{
    internal class Program
    {
        static void Main(string[] args)
        {

            // type casting.
            /*
                there are two type of type casting
                    1.implicit casting
                    2.explicit casting
             */
            
            int x = (int)3.14;
            double y = (double)4.65;
            
            double z = (x + y) / 2;
            
            Console.WriteLine("the avarage of "+x+" and "+y+" is "+z);

            Console.ReadKey();
        }
    }
}
